<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginBottom="-50dp">


        <androidx.cardview.widget.CardView
            app:cardElevation="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHICLE INFORMATION"
                android:textAlignment="center"
                android:textSize="27dp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:layout_height="match_parent">

             <LinearLayout
                 android:layout_marginRight="20dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical">
            <ImageView
                android:id="@+id/vehicle_image"

                android:layout_width="150dp"
                app:srcCompat="@drawable/cross"
                android:scaleType="centerCrop"
                android:layout_height="130dp"
                />

                 <Button
                     android:layout_width="match_parent"
                     android:layout_height="25dp"
                     android:layout_marginTop="10dp"
                     android:layout_marginHorizontal="25dp"
                     android:text="Delete"
                     android:textColor="@color/white"
                     android:backgroundTint="#F30404"
                     android:background="@drawable/roundbutton"/>

                 <Button
                     android:layout_width="match_parent"
                     android:layout_height="25dp"
                     android:backgroundTint="#002B5B"
                     android:textColor="@color/white"
                     android:layout_marginTop="10dp"
                     android:layout_marginHorizontal="25dp"
                     android:text="Update"
                     android:background="@drawable/roundbutton"/>
            </LinearLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Vehicle Type: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/type_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="type_v" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Vehicle Registration No:"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/reg_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="reg_number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Chassis Number:"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/chassis_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="chassis_num" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Available Seats:"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/seats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="seats" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Status"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vehicle_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="vehicle_level" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        </androidx.cardview.widget.CardView>
</LinearLayout>
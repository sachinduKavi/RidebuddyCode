<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:padding="30dp"
    android:orientation="vertical"
    android:background="@drawable/registration_backgorund">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#575656"
        android:text="RideBuddy\nVehicle Registration"
        />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/cross"
            android:onClick="crossBtn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <Spinner
            android:layout_marginStart="25dp"
            android:id="@+id/spinner"
            android:layout_width="167dp"
            android:padding="2dp"
            android:background="@drawable/spinner_file"
            android:spinnerMode="dropdown"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="Registration Number"/>

    <EditText
        android:id="@+id/registration_number"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_file"
        android:textSize="18dp"
        android:hint="ex:- BHM2748"
        android:width="223dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="Chassis Number"/>

    <EditText
        android:id="@+id/chassis_number"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_file"
        android:textSize="18dp"
        android:hint="ex:- 45ssF414WR"
        android:width="223dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="No. Seats"/>

    <EditText
        android:id="@+id/seats"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_file"
        android:textSize="18dp"
        android:hint="04"
        android:width="72dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginEnd="50dp"
            android:textSize="14dp"
            android:text="Vehicle Image"/>
            <TextView
                android:id="@+id/imageLinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginStart="7dp"
                android:textColor="#0867E3"
                android:text="Image not selected"/>

        </LinearLayout>
        <ImageView
            android:layout_marginStart="30dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="addImage"
            app:srcCompat="@drawable/green_add"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        
        android:gravity="top"
        android:layout_height="wrap_content">


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:onClick="checkBoxClick"
            android:textColor="#8D8686"
            android:text="I have read and agree for terms and condition of RideBuddy PVT." 
            />
    </LinearLayout>
    
    <Button
        android:id="@+id/register_btn"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="register"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:enabled="false"
        android:onClick="onRegistration"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#00B4A7"
        />

</LinearLayout>